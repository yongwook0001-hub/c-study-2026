// 마우스 클릭으로 물병에 물을 계속 넣어줘야 하는 게임

#include <stdio.h>

int original(int num);

int main(void)
{
	//포인터

	//[철수] = 101호 -> 메모리 공간의 주소
	//[영희] = 201호
	//[민수] = 301호

	int 철수 = 1;
	int 영희 = 2;
	int 민수 = 3;

	printf("철수네 주소 : %d, 암호 : %d \n", &철수, 철수); 
	printf("영희네 주소 : %d, 암호 : %d \n", &영희, 영희);
	printf("민수네 주소 : %d, 암호 : %d \n", &민수, 민수);

	// 미션맨 !

	// 첫 번째 미션 : 아파트의 각 집에 방문하여 문에 적힌 암호를 확인

	int * 미션맨; //포인터 변수

	미션맨 = &철수; // 미션맨은 철수의 주소를 가짐 ex) 101호

	printf("\n\n Test = %d , 암호 = %d", 미션맨, *미션맨); // *는 주소의 값

	미션맨 = &영희; // 미션맨은 철수의 주소를 가짐 ex) 101호

	printf("\n\n Test = %d , 암호 = %d", 미션맨, *미션맨); // *는 주소의 값

	미션맨 = &민수; // 미션맨은 철수의 주소를 가짐 ex) 101호

	printf("\n\n Test = %d , 암호 = %d", 미션맨, *미션맨); // *는 주소의 값

	// 두 번째 미션 : 각 암호에 3을 곱해라

	미션맨 = &철수;
	*미션맨 = *미션맨 * 3;
	printf("\n\n 3을 곱한 미션맨의 주소 = %d , 암호 = %d", 미션맨, *미션맨); // *는 주소의 값

	미션맨 = &영희;
	*미션맨 = *미션맨 * 3;
	printf("\n\n 3을 곱한 미션맨의 주소 = %d , 암호 = %d", 미션맨, *미션맨); // *는 주소의 값

	미션맨 = &민수;
	*미션맨 = *미션맨 * 3;
	printf("\n\n 3을 곱한 미션맨의 주소 = %d , 암호 = %d", 미션맨, *미션맨); // *는 주소의 값

	//  스파이 : 미션맨이 바꾼 암호에서 2를 빼라 !

	int * 스파이 = 미션맨; // 스파이 => 누군가의 아파트 주소, 미션맨 => 누군가의 아파트 주소
	printf("\n... 스파이가 미션 수행하는 중...\n\n");

	스파이 = &철수;
	*스파이 = *스파이 - 2;//철수 = 철수 -2랑 같은 문장
	printf("스파이가 방문하는 곳 주소 : %d, 암호 %d \n", 스파이, *스파이);

	스파이 = &영희;
	*스파이 = *스파이 - 2;// originaly(영희)
	printf("스파이가 방문하는 곳 주소 : %d, 암호 %d \n", 스파이, *스파이);

	스파이 = &민수;
	*스파이 = *스파이 - 2;//철수 = 철수 -2랑 같은 문장
	printf("스파이가 방문하는 곳 주소 : %d, 암호 %d \n\n\n", 스파이, *스파이);

	original(*스파이);
	printf("함수로 바꾼 주소 : %d, 암호 %d \n", 스파이, *스파이);


	return 0;
}

int original(int num)
{
    num=  num - 2;
}
