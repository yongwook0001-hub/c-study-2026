#include <stdio.h>
#include<time.h>

//5명의 고양이가 있다.
//아무 키나 눌러서 랜덤으로 고양이를 뽑아 5명을 다 뽑으면 되는 게임
//1. 아무 키나 눌러주세요
//2. 입력시 -> 고양이 등장 //구조체로 고양이 내용 입력
//3. If num>5이면 break
//4. 이름, 나이, 성격, 키우기 난이도

typedef struct {
	char* name;
	int age;
	char* character;
	int level;
}CAT;


void initCats(); //고양이 정보 초기화
void printCat(int selected);//selected의 값에 따라 해당 인물 내용 출력
int checkCollection();

//현재까지 수집한 고양이
int collection[5] = { 0,0,0,0,0 };

CAT cats[5];

int main(void)
{
	srand(time(NULL));

	initCats(); //초기 변수값 정의

	while (1)
	{
		printf("두근두근 ! 어떤 인물이 뽑힐까요? \n 아무 키나 눌러서 확인하세요 !!\n");
		getchar();

		int selected = rand() % 5; // 0부터 4까지 숫자 반환

		printCat(selected); // 뽑은 고양이 정보 출력

		collection[selected] = 1; // 뽑은 고양이 입력

		int collecAll = checkCollection();

		if (collecAll == 1)
		{
			break;
		}

	}




	return 0;

}

void initCats()
{
	/*cats[0].name = "깜냥이";
	cats[0].age = 5;
	cats[0].character = "온순";
	cats[0].level = 3;

	cats[1].name = "누렁이";
	cats[1].age = 7;
	cats[1].character = "순";
	cats[1].level = 3;

	cats[2].name = "지원이";
	cats[2].age = 10;
	cats[2].character = "바보";
	cats[2].level = 3;

	cats[3].name = "용욱이";
	cats[3].age = 26;
	cats[3].character = "착함";
	cats[3].level = 10;

	cats[4].name = "지원이";
	cats[4].age = 23;
	cats[4].character = "온순";
	cats[4].level = 100;*/


	
	cats[0] = (CAT){ "지원이", 23, "이쁨", 3 };
	cats[1] = (CAT){ "바보", 24, "멍충이", 3 };
	cats[2] = (CAT){ "뻥이야", 25, "빵이야", 3 };
	cats[3] = (CAT){ "사실", 26, "있잖아", 3 };
	cats[4] = (CAT){ "사랑해", 26, "♥", 3 };
	

	
}

void printCat(int selected)
{
	printf("\n\n== 당신은 이 인물을 뽑았어요 !! ==\n\n");
	printf("이름		: %s\n", cats[selected].name);
	printf("나이		: %d\n", cats[selected].age);
	printf("성격		: %s\n", cats[selected].character);
	printf("레벨		: ");

	for (int i = 0; i < cats[selected].level; i++)
	{
		printf("%s", "★");
	}
	printf("\n===================\n\n\n\n");

}

int checkCollection()
{
	//1. 현재 보유한 인물 목록 출력
	//2. 다 모았는지 여부를 반환
	int collectAll = 1;

	printf("\m\m === 보유한 카드 목록이에요 == \n\n");
	for (int i = 0; i < 5; i++)
	{
		if (collection[i] == 0)
		{
			printf("%10s", "(미개봉)");
			collectAll = 0;
		}
		else {
			printf("%10s", cats[i].name);
		}
	}
	printf("\n=====================\n\n");

	if (collectAll) 
	{
		printf("\n\n 축하합니다 다 모았어요 !!!! \n");
	}

	return collectAll; //0인지 1인지 둘 중 하나
}
